{

  "manifest_version": 2,
  "name": "moarTLS Analyzer",
  "description": "Analyze the page for unsecure url references.",
  "version": "0.2",
  "author": "Eric Lawrence (@ericlaw)",
  
  "browser_action": {
     "default_icon": {
            "19": "icon.png",
            "38": "icon.png"
          },
   "default_popup": "popup.html"
  },
  
 "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  
  "permissions": [
   	"activeTab", 
   	"<all_urls>",
   	"downloads"
   ]
}